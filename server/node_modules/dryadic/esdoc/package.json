{
  "name": "dryadic",
  "description": "Component micro-framework for creative coding",
  "version": "0.2.0",
  "author": "Chris Sattinger <crucialfelix@gmail.com>",
  "contributors": [
    {
      "name": "Chris Sattinger",
      "email": "crucialfelix@gmail.com"
    }
  ],
  "dependencies": {
    "bluebird": "^3.3.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel": "^6.2.4",
    "babel-cli": "^6.7.7",
    "babel-jest": "^12.0.1",
    "babel-preset-es2015": "^6.1.18",
    "eslint": "^2.8.0",
    "jest-cli": "^12.0.1",
    "jscs": "^3.0.3"
  },
  "license": "MIT",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git://github.com/crucialfelix/dryadic"
  },
  "main": "index",
  "scripts": {
    "test": "jest && npm run lint && npm run jsstyle",
    "lint": "eslint -c .eslintrc src",
    "jest": "npm run build && jest --watch",
    "jsstyle": "jscs src",
    "compile": "babel --source-maps --out-dir=./lib src",
    "watch": "babel --watch --source-maps --out-dir=./lib src",
    "docs": "esdoc -c esdoc.json",
    "build": "npm run compile",
    "prepublish": "npm run build",
    "postinstall": "node -e \"require('fs').stat('lib', function (e, s) { process.exit(e || !s.isDirectory() ? 1 : 0) })\" || npm run build"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "js"
    ],
    "testPathDirs": [
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/underscore",
      "node_modules/bluebird"
    ],
    "collectCoverage": false
  },
  "jshintConfig": {
    "esnext": true
  },
  "engines": {
    "node": ">=4 <6"
  }
}
